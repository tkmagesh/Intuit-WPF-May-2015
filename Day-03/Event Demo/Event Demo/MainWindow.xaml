<Window x:Class="Event_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid >
        <Border BorderThickness="2" BorderBrush="Blue" Background="LightBlue" Margin="20" Padding="20" MouseDown="UIElement_OnMouseDown" Name="BorderBlue">
            <StackPanel  Margin="10" Name="StackPanelBlue">
                <Button Content="Button1" ></Button>
                <Border BorderThickness="2" BorderBrush="Red" Background="LightPink" Margin="20" Padding="20" Name="BorderRed">
                    <StackPanel Name="StackPanelRed">
                        <Button Content="Button2" ></Button>
                        <Border BorderThickness="2" BorderBrush="Green" Background="LightGreen" Margin="20" Padding="20" Name="BorderGreen">
                            <Button Content="Button3" ></Button>
                        </Border>
                    </StackPanel>
                    

                    
                </Border>
            </StackPanel>
            
            
        </Border>
        
    </Grid>
</Window>
